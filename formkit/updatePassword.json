[
  {
    "$cmp": "Input",
    "props": {
      "name": "password",
      "type": "password",
      "label": "components.inputs.passwordLabel",
      "validation": "required|length:6,50|contains_lowercase|contains_uppercase|contains_alpha|contains_numeric|contains_symbol"
    }
  },
  {
    "$el": "div",
    "attrs": {
      "class": "flex justify-end"
    },
    "children": [
      {
        "$cmp": "FormKit",
        "props": {
          "label": "actions.save",
          "type": "submit"
        },
        "disabled": "$data.isLoading"
      }
    ]
  },
  {
    "$el": "p",
    "if": "$data.error",
    "attrs": {
      "class": "text-danger body-small mt-1"
    },
    "children": "$data.error"
  }
]