[
  {
    "$cmp": "FormKit",
    "props": {
      "name": "title",
      "label": "components.inputs.titleLabel",
      "validation": "required|length:3,30"
    }
  },
  {
    "$cmp": "FormKit",
    "if": "$data.campaign",
    "props": {
      "type": "select",
      "name": "campaign",
      "label": "components.inputs.campaignLabel",
      "placeholder": "general.noSelected",
      "options": "$data.options"
    }
  },
  {
    "$cmp": "FormKit",
    "props": {
      "name": "background",
      "type": "color",
      "label": "components.inputs.backgroundLabel",
      "validation": "required"
    }
  },
  {
    "$cmp": "FormKit",
    "props": {
      "label": {
        "if": "$data.update === false",
        "then": "pages.encounters.add",
        "else": {
          "if": "$data.update",
          "then": "actions.update"
        }
      },
      "type": "submit",
      "disabled": "$data.isLoading"
    }
  }
]