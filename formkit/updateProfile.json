[
  {
    "$cmp": "FormKit",
    "props": {
      "name": "name",
      "label": "components.inputs.nameLabel",
      "validation": "required|length:3,30|alpha_spaces"
    }
  },
  {
    "$cmp": "FormKit",
    "props": {
      "name": "username",
      "label": "components.inputs.usernameLabel",
      "validation": "required|length:3,15|alpha_spaces"
    }
  },
  {
    "$cmp": "FormKit",
    "props": {
      "name": "email",
      "label": "components.inputs.emailLabel",
      "validation": "required|length:5,50|email"
    }
  },
  {
    "$cmp": "FormKit",
    "props": {
      "name": "marketing",
      "type": "checkbox",
      "label": "components.inputs.marketingLabel"
    }
  },
  {
    "$el": "div",
    "attrs": {
      "class": "flex justify-end"
    },
    "children": [
      {
        "$cmp": "FormKit",
        "props": {
          "label": "actions.save",
          "type": "submit"
        },
        "disabled": "$data.isLoading"
      }
    ]
  },
  {
    "$el": "p",
    "if": "$data.error",
    "attrs": {
      "class": "text-danger body-small mt-1"
    },
    "children": "$data.error"
  }
]